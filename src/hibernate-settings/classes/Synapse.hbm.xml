<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

    <class name="nn.structure.Synapse" table="synapse">
        <id name="id" column="id">
            <generator class="identity" />
        </id>

        <property name="inputNeuronId" column="input_neuron_id"/>
        <property name="weight" column="weight" type="java.lang.Double"/>
        <property name="lastDeltaWeight" column="last_delta_weight" type="java.lang.Double"/>
        <property name="inputId" column="input_id"/>
    </class>
</hibernate-mapping>